                    "operator": ">=",
                    "value": [
                        1280,
                        null
                    ],
                    "enforce": false
                },
                "size": {
                    "operator": ">=",
                    "value": [
                        200,
                        null
                    ],
                    "enforce": false
                }
            }
        },
        "speakers": true,
        "input": {
            "operator": "OR",
            "values": [
                "mouse",
                "touchscreen"
            ]
        }
    },
    "Edit": {
        "type": {
            "value": "smartphone",
            "enforce": false
        },
        "display": true,
        "input": {
            "operator": "OR",
            "values": [
                "mouse",
                "touchscreen"
            ]
        }
    }
