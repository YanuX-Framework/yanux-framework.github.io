{
    "$schema": "./components-restriction-schema.json",
    "List": {
        "type": {
            "value": "smartphone",
            "enforce": false
        },
        "display": true,
        "input": {
            "operator": "OR",
            "values": [
                "mouse",
                "touchscreen"
            ]
        }
    },
    "Note": {
        "display": {
            "operator": "AND",
            "values": {
